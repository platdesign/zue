div(:class="$css.component")
	button(
		:type="type",
		:class="{ [$css[`cs-${cs}`]]: true }",
		@click.stop="click",
		:disabled="disabled"
	)
		fa(:class="$css.icon", :name="isPending ? pendingIcon : icon", :spin="isPending" v-if="icon")
		span(v-if="$slots.default || label")
			slot(name="default") {{ label }}

	div(v-if="confirm")
		modal(name="confirmModal", :modalClass="$css.confirmModal")
			header {{ confirm }}
			footer
				btn(cs="silver", @click="$refs.confirmModal.close()") Abbrechen
				btn(cs="primary", @click="confirmClick") Best√§tigen
